<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@drawable/minimap_container_bkgrnd">
    <views.MapTileView
        android:id="@+id/entrance_tile"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="50px"
        android:layout_height="50px" />
    <views.MapTileView
        android:id="@+id/hallway_tile"
        android:layout_above="@+id/entrance_tile"
        android:layout_centerHorizontal="true"
        android:layout_width="50px"
        android:layout_height="50px" />
    <views.MapTileView
        android:id="@+id/kitchen_tile"
        android:layout_toRightOf="@+id/hallway_tile"
        android:layout_alignBottom="@id/hallway_tile"
        android:layout_width="50px"
        android:layout_height="50px" />
    <views.MapTileView
        android:id="@+id/diningroom_tile"
        android:layout_toRightOf="@+id/hallway_tile"
        android:layout_above="@id/hallway_tile"
        android:layout_width="50px"
        android:layout_height="50px" />
    <views.MapTileView
        android:id="@+id/livingroom_tile"
        android:layout_toRightOf="@+id/diningroom_tile"
        android:layout_above="@id/hallway_tile"
        android:layout_width="50px"
        android:layout_height="50px" />
</RelativeLayout>